<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_window_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:text="MINE EDIT"
            android:textColor="@color/color_3c3c3c"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="昵称"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/mine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_stroke_bg"
                    android:gravity="start"
                    android:hint="昵称"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="电话号码"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/mine_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_stroke_bg"
                    android:hint="15755949344"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="地址"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/mine_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_stroke_bg"
                    android:hint="mine_address"
                    android:maxLength="30"
                    android:padding="5dp"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="个性签名"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/mine_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_stroke_bg"
                    android:hint="mine_sign"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="注册时间"
                    android:layout_marginVertical="5dp"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/register_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/normal_stroke_bg"
                    android:hint="mine_sign"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="10sp" />

            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mine_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:text="取消"
                android:textColor="@color/candy_r"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:layout_marginHorizontal="45dp"
                android:background="@color/color_E3E4E6" />

            <TextView
                android:id="@+id/mine_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:text="保存"
                android:textColor="@color/candy_r"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
