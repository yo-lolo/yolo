<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/include_head"
        layout="@layout/comm_head_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:elevation="3dp"
            android:background="@drawable/viewgroup_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:src="@mipmap/login_number_icon" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginVertical="12dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_8a8a8a" />

            <EditText
                android:id="@+id/number_edit"
                android:paddingVertical="10dp"
                android:minWidth="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:elevation="3dp"
            android:background="@drawable/viewgroup_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:src="@mipmap/login_pass_icon" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginVertical="12dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_8a8a8a" />

            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="10dp"
                android:minWidth="200dp"
                android:hint="6-14位字符(数字/字母)"
                android:inputType="textPassword"
                android:maxLength="14"
                android:maxLines="1"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/viewgroup_bg"
            android:elevation="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="20dp"
                android:src="@mipmap/login_pass_icon" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginVertical="12dp"
                android:layout_marginRight="20dp"
                android:background="@color/color_8a8a8a" />

            <EditText
                android:id="@+id/pass_again_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:paddingVertical="10dp"
                android:minWidth="200dp"
                android:hint="请再次输入密码"
                android:inputType="textPassword"
                android:maxLength="14"
                android:maxLines="1"
                android:textSize="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/register_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button_bg"
            android:text="注册"
            android:textColor="@color/color_FFFFFF"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/agree_protocol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/reg_agree_protocol_text"
            android:textSize="13dp" />

    </LinearLayout>

</LinearLayout>