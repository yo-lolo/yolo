<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="13dp"
        android:paddingVertical="7dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/search_chat_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/touxiang"
            app:riv_corner_radius="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/search_chat_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_chat_neck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_dbdbdb"
                android:textSize="10dp"
                tools:text="2022.10.21 18:35" />

            <TextView
                android:id="@+id/search_chat_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_left_bg"
                android:maxWidth="240dp"
                android:paddingVertical="2dp"
                android:text="这是一段对话"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/chat_left_bg"
            android:maxWidth="240dp"
            android:paddingVertical="2dp"
            android:text="10月16日"
            android:textColor="@color/color_dbdbdb"
            android:textSize="11dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="50dp"
        android:background="@color/color_e7e7e7" />


</LinearLayout>