<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/include"
        layout="@layout/comm_head_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:src="@mipmap/touxiang"
                app:riv_corner_radius="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/user_detail_neck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MoMo"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/user_detail_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="电话号码：MoMo"
                    android:textColor="@color/color_888"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/user_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="注册时间："
                    android:textColor="@color/color_888"
                    android:textSize="13dp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color_e7e7e7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@mipmap/icon_more"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:text="文章"
            android:textColor="@color/color_3c3c3c"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginHorizontal="10dp"
            android:background="@color/color_e7e7e7" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableRight="@mipmap/icon_more"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:text="更多信息"
            android:textColor="@color/color_3c3c3c"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/go_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_FFFFFF"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawableLeft="@mipmap/gochat_icon"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="发消息"
            android:textColor="#1a4a90"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/color_FFFFFF"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:paddingHorizontal="12dp"
            android:text="添加到好友"
            android:textColor="#1a4a90"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>