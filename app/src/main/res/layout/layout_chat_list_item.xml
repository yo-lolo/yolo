<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">


    <LinearLayout
        android:id="@+id/left_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/left_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/touxiang"
            app:riv_corner_radius="3dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/left_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:paddingHorizontal="3dp"
                android:textColor="@color/color_dbdbdb"
                tools:text="2022.10.21 18:35"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/left_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_left_bg"
                android:maxWidth="240dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="这是一段对话"
                android:textColor="@color/black"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/right_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:paddingHorizontal="3dp"
                android:textColor="@color/color_dbdbdb"
                tools:text="2022.10.21 18:35"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/right_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_right_bg"
                android:maxWidth="240dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="8dp"
                android:text="这是一段对话 这是一段对话 这是一段对话 这是一段对话"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/right_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/touxiang"
            app:riv_corner_radius="3dp" />


    </LinearLayout>

</LinearLayout>