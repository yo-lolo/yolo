<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/normal_stroke_bg"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:paddingHorizontal="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/alert_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DESCRIBE"
                android:layout_marginTop="15dp"
                android:textColor="@color/color_3c3c3c"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alert_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="取消"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:textColor="@color/candy_r"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginHorizontal="45dp"
                android:background="@color/color_E3E4E6" />

            <TextView
                android:id="@+id/alert_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="确定"
                android:paddingVertical="5dp"
                android:paddingHorizontal="8dp"
                android:textColor="@color/candy_r"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
