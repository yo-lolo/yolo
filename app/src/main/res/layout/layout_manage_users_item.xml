<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/once_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/todo_list_item_bg"
        android:orientation="horizontal"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/icon_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            app:riv_corner_radius="5dp"
            android:layout_marginHorizontal="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_3c3c3c"
                android:textSize="14dp"
                tools:text="ONCE_NAME" />

            <TextView
                android:id="@+id/user_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_888"
                android:textSize="10dp"
                tools:text="ONCE_DESCRIBE" />

            <TextView
                android:id="@+id/user_neck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_888"
                android:textSize="10sp"
                tools:text="ONCE_DESCRIBE" />

            <TextView
                android:id="@+id/user_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_888"
                android:textSize="10sp"
                tools:text="ONCE_DESCRIBE" />

            <TextView
                android:id="@+id/user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_888"
                android:textSize="10sp"
                tools:text="ONCE_DESCRIBE" />

            <TextView
                android:id="@+id/user_regi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_888"
                android:textSize="10sp"
                tools:text="ONCE_DESCRIBE" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="8dp"
        android:background="@color/color_e7e7e7" />

</LinearLayout>