<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_browser_image"
        android:layout_width="43.33dp"
        android:layout_height="43.33dp"
        android:scaleType="fitXY"
        tools:src="@drawable/icon_home_resource_default_image"
        app:riv_corner_radius="10dp"/>

    <TextView
        android:id="@+id/item_browser_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="middle"
        android:layout_marginTop="7.33dp"
        android:textSize="10.67sp"
        android:textColor="@color/_70020F2C"
        tools:text="浏览器" />
</LinearLayout>