<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include
        android:id="@+id/include"
        layout="@layout/comm_head_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/user_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@mipmap/touxiang"
                app:riv_corner_radius="5dp" />

            <TextView
                android:id="@+id/user_neck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="MoMo"
                android:textColor="@color/color_3c3c3c"
                android:textSize="12dp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/go_find_chats"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_FFFFFF"
        android:drawableRight="@mipmap/icon_more"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="查找聊天内容"
        android:textColor="@color/color_3c3c3c"
        android:textSize="16dp" />

    <LinearLayout
        android:id="@+id/self_gone_layout"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="消息免打扰"
                android:textColor="#3C3C3C"
                android:textSize="16dp" />
            <Switch
                android:id="@+id/switch_messNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:thumb="@drawable/app_mine_switch_thumb_bg"
                android:trackTint="@color/app_mine_switch_track_bg"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_e7e7e7"
            android:layout_marginLeft="12dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="置顶聊天"
                android:textColor="#3C3C3C"
                android:textSize="16dp" />
            <Switch
                android:id="@+id/switch_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="16dp"
                android:thumb="@drawable/app_mine_switch_thumb_bg"
                android:trackTint="@color/app_mine_switch_track_bg"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/clear_chats"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/color_FFFFFF"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:text="清空聊天记录"
        android:textColor="@color/color_3c3c3c"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/delete_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@color/color_FFFFFF"
        android:gravity="center"
        android:text="删除好友"
        android:textColor="@color/color_red"
        android:textSize="18dp" />

</LinearLayout>