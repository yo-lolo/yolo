<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_window_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="RtlHardcoded,HardcodedText,RtlSymmetry,SmallSp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:text="ADD_ONCE"
            android:textColor="@color/color_3c3c3c"
            android:textSize="19sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="28dp"
            android:paddingRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="NAME"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/once_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/normal_stroke_bg"
                    android:gravity="start"
                    android:hint="姓名"
                    android:maxLength="10"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="10sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="DESCRIBE"
                    android:textColor="@color/color_3c3c3c"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp">

                    <EditText
                        android:id="@+id/once_desc"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/normal_stroke_bg"
                        android:gravity="start"
                        android:hint="添加你的描述"
                        android:maxLength="100"
                        android:padding="5dp"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/desc_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="2dp"
                        android:text="0/100"
                        android:textSize="9dp" />
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/once_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:text="取消"
                android:textColor="@color/candy_r"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="15dp"
                android:layout_marginHorizontal="45dp"
                android:background="@color/color_E3E4E6" />

            <TextView
                android:id="@+id/once_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="8dp"
                android:paddingVertical="5dp"
                android:text="确定"
                android:textColor="@color/candy_r"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
